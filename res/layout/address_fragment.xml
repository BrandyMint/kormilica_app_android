<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="#d6d6d6"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

	<LinearLayout android:layout_width="fill_parent"
		android:id="@+id/wrong_layout"
		android:paddingLeft="8dp"
		android:paddingRight="8dp"
    	android:layout_height="fill_parent"
    	android:orientation="vertical"
   		android:background="#ffffff">

	    <FrameLayout android:layout_width="fill_parent"
			android:paddingTop="8dp"
			android:paddingBottom="8dp"
			android:id="@+id/error_layout"
    	    android:background="#ff0000"
    		android:layout_height="wrap_content">

        	<TextView android:layout_width="fill_parent"
				android:paddingTop="20dp"
				android:id="@+id/error"
				android:paddingBottom="20dp"
				android:text="Some error"
        		android:layout_height="fill_parent"
		       	android:layout_gravity="center|center"
		       	android:gravity="center|center"
			   	android:textColor="#ffffff"
        		android:textSize="18dp"/>
        
	    </FrameLayout>    
    
    	<LinearLayout android:layout_width="fill_parent"
			android:paddingTop="8dp"
			android:paddingBottom="8dp"
    		android:layout_height="wrap_content"
    		android:orientation="horizontal">

        	<TextView android:layout_width="fill_parent"
        		android:layout_weight="1"
				android:text="@string/phone"
    	    	android:layout_height="wrap_content"
	    	   	android:layout_gravity="left|center"
		   		android:textColor="#000000"
	        	android:textSize="18dp"/>
        
    	    <EditText android:id="@+id/phone"
				android:inputType="number"
        		android:layout_weight="0.5"
	        	android:layout_width="fill_parent"
				android:hint="+7"
        		android:layout_height="wrap_content"
	       		android:layout_gravity="left|center"
			   	android:textColor="#000000"
    	    	android:textSize="18dp"/>
        
    	</LinearLayout>
    
		<ImageView android:background="@drawable/separator"
			android:layout_gravity="center"
			android:layout_height="wrap_content" 
			android:layout_width="wrap_content"/> 
    
	    <LinearLayout android:layout_width="fill_parent"
			android:paddingTop="8dp"
			android:paddingBottom="8dp"
	    	android:layout_height="wrap_content"
    		android:orientation="horizontal">
	
    	    <TextView android:layout_width="fill_parent"
        		android:layout_weight="1"
				android:text="@string/city"
    	    	android:layout_height="wrap_content"
	    	   	android:layout_gravity="left|center"
		   		android:textColor="#000000"
        		android:textSize="18dp"/>
        
	        <TextView android:id="@+id/city"
    	    	android:layout_weight="0.5"
        		android:layout_width="fill_parent"
				android:text="Чебоксары"
	        	android:layout_height="wrap_content"
		       	android:layout_gravity="left|center"
			   	android:textColor="#000000"
        		android:textSize="18dp"/>
        
	    </LinearLayout>
	
		<ImageView android:background="@drawable/separator"
			android:layout_gravity="center"
			android:layout_height="wrap_content" 
			android:layout_width="wrap_content"/> 
    
    	<LinearLayout android:layout_width="fill_parent"
			android:paddingTop="8dp"
			android:paddingBottom="8dp"
    		android:layout_height="wrap_content"
    		android:orientation="horizontal">

	        <TextView android:layout_width="fill_parent"
    	    	android:layout_weight="1"
				android:text="@string/address"
	        	android:layout_height="wrap_content"
		       	android:layout_gravity="left|center"
			   	android:textColor="#000000"
        		android:textSize="18dp"/>
        
	        <EditText android:id="@+id/address"
    	    	android:layout_weight="0.5"
        		android:layout_width="fill_parent"
				android:hint="@string/address_details"
	        	android:layout_height="wrap_content"
		       	android:layout_gravity="left|center"
			   	android:textColor="#000000"
        		android:textSize="18dp"/>
        
    	</LinearLayout>

		<ImageView android:background="@drawable/separator"
			android:layout_gravity="center"
			android:layout_height="wrap_content" 
			android:layout_width="wrap_content"/> 
		
		<ImageView android:background="#00ffffff"
			android:layout_gravity="center"
			android:layout_height="20dp" 
			android:layout_width="wrap_content"/> 
	
	    <TextView android:background="@drawable/green_button_selector"
    	    android:id="@+id/button"
			android:textColor="#ffffff"
			android:textSize="19dp"
    		android:text="@string/deliver_order"
			android:layout_gravity="center_vertical|center_horizontal"
			android:gravity="center_vertical|center_horizontal"
			android:layout_width="280dp"
    		android:layout_height="45dp"/>
        
	</LinearLayout>
	        
<!--         -->

	<LinearLayout android:layout_width="fill_parent"
		android:id="@+id/true_layout"
		android:paddingLeft="8dp"
		android:paddingRight="8dp"
   	    android:background="#d6d6d6"
    	android:layout_height="fill_parent"
    	android:orientation="vertical">

	    <FrameLayout android:layout_width="fill_parent"
    	    android:background="#00ff00"
			android:paddingTop="8dp"
			android:paddingBottom="8dp"
    		android:layout_height="wrap_content">

        	<TextView android:layout_width="fill_parent"
				android:paddingTop="20dp"
				android:id="@+id/message"
				android:paddingBottom="20dp"
				android:text="Some error"
        		android:layout_height="fill_parent"
		       	android:layout_gravity="center|center"
		       	android:gravity="center|center"
			   	android:textColor="#ffffff"
        		android:textSize="18dp"/>
        
	    </FrameLayout>    
    
    	<LinearLayout android:layout_width="fill_parent"
			android:paddingTop="8dp"
			android:paddingBottom="8dp"
    		android:layout_height="wrap_content"
    		android:orientation="horizontal">

        	<TextView android:layout_width="fill_parent"
        		android:layout_weight="1"
				android:text="@string/phone"
    	    	android:layout_height="wrap_content"
	    	   	android:layout_gravity="left|center"
		   		android:textColor="#000000"
	        	android:textSize="18dp"/>
        
    	    <TextView android:id="@+id/phone_text"
				android:inputType="number"
        		android:layout_weight="0.5"
	        	android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
	       		android:layout_gravity="left|center"
			   	android:textColor="#000000"
    	    	android:textSize="18dp"/>
        
    	</LinearLayout>
    
	    <LinearLayout android:layout_width="fill_parent"
			android:paddingTop="8dp"
			android:paddingBottom="8dp"
	    	android:layout_height="wrap_content"
    		android:orientation="horizontal">
	
    	    <TextView android:layout_width="fill_parent"
        		android:layout_weight="1"
				android:text="@string/city"
    	    	android:layout_height="wrap_content"
	    	   	android:layout_gravity="left|center"
		   		android:textColor="#000000"
        		android:textSize="18dp"/>
        
	        <TextView android:id="@+id/city_text"
    	    	android:layout_weight="0.5"
        		android:layout_width="fill_parent"
				android:text="Чебоксары"
	        	android:layout_height="wrap_content"
		       	android:layout_gravity="left|center"
			   	android:textColor="#000000"
        		android:textSize="18dp"/>
        
	    </LinearLayout>
	
    	<LinearLayout android:layout_width="fill_parent"
			android:paddingTop="8dp"
			android:paddingBottom="8dp"
    		android:layout_height="wrap_content"
    		android:orientation="horizontal">

	        <TextView android:layout_width="fill_parent"
    	    	android:layout_weight="1"
				android:text="@string/address"
	        	android:layout_height="wrap_content"
		       	android:layout_gravity="left|center"
			   	android:textColor="#000000"
        		android:textSize="18dp"/>
        
	        <TextView android:id="@+id/address_text"
    	    	android:layout_weight="0.5"
        		android:layout_width="fill_parent"
	        	android:layout_height="wrap_content"
		       	android:layout_gravity="left|center"
			   	android:textColor="#000000"
        		android:textSize="18dp"/>
        
    	</LinearLayout>

		<ImageView android:background="@drawable/separator"
			android:layout_gravity="center"
			android:layout_height="wrap_content" 
			android:layout_width="wrap_content"/> 
		
		<ImageView android:background="#00d6d6d6"
			android:layout_gravity="center"
			android:layout_height="20dp" 
			android:layout_width="wrap_content"/> 
    	
        <TextView android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
	       	android:layout_gravity="center|center"
	       	android:gravity="center|center"
		   	android:textColor="#000000"
		   	android:text="@string/contact_to_us"
       		android:textSize="18dp"/>
        
    	<LinearLayout android:layout_width="fill_parent"
			android:paddingTop="8dp"
			android:paddingBottom="8dp"
			android:paddingLeft="10dp"
			android:paddingRight="10dp"
    		android:layout_height="wrap_content"
    		android:orientation="horizontal">

	        <TextView android:layout_width="fill_parent"
    	    	android:layout_weight="1"
				android:id="@+id/phone_number"
	        	android:layout_height="wrap_content"
		       	android:layout_gravity="left|center"
			   	android:textColor="#000000"
        		android:textSize="15dp"/>
        
	        <TextView android:id="@+id/call"
	            android:background="@drawable/blue_button_selector"
				android:text="@string/call"
    	    	android:layout_weight="1.5"
        		android:layout_width="fill_parent"
	        	android:layout_height="wrap_content"
		       	android:layout_gravity="center_vertical"
		       	android:gravity="center|center"
			   	android:textColor="#000000"
        		android:textSize="18dp"/>
        
    	</LinearLayout>
        		
	     <ImageView android:background="@drawable/separator"
			android:layout_gravity="center"
			android:layout_height="wrap_content" 
			android:layout_width="wrap_content"/> 
		
		<ImageView android:background="#00d6d6d6"
			android:layout_gravity="center"
			android:layout_height="20dp" 
			android:layout_width="wrap_content"/> 
	
		<LinearLayout android:background="@drawable/blue_bottom_bar"
			android:orientation="horizontal"
    		android:layout_height="50dp" 
  			android:layout_width="fill_parent">
				
	  		<TextView android:id="@+id/returned"
				android:layout_weight="1"
				android:background="@drawable/prepare_bg_selector"
				android:gravity="center|center"
				android:text="@string/returned"
				android:textColor="#ffffff"
				android:textSize="18dp"
				android:layout_gravity="center_vertical"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"/>
				
	  	</LinearLayout>
        
	</LinearLayout>        
	

</FrameLayout>