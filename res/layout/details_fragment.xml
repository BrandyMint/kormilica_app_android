<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/common_layout"
    android:orientation="vertical"
   	android:background="#ffffff">
 
    <LinearLayout android:layout_width="fill_parent"
		android:paddingTop="30dp"
    	android:layout_height="wrap_content"
		android:paddingBottom="3dp"
    	android:orientation="horizontal">

        <FrameLayout android:id="@+id/lastReviewsProgress"
    		android:layout_gravity="center|left"
			android:paddingTop="15dp"
			android:paddingBottom="15dp"
			android:paddingLeft="10dp"
			android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ProgressBar
                android:layout_width="wrap_content"
		   		android:layout_gravity="center|center"
                android:layout_height="wrap_content"/>

           	<ImageView android:id="@+id/image"
           	    android:background="@drawable/image_bg"
		   		android:layout_gravity="center|center"
		   		android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"/>

        </FrameLayout>
        
    	<LinearLayout android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
        	android:layout_gravity="left|top"
			android:layout_weight="1"
    		android:orientation="vertical">

        	<TextView android:id="@+id/name"
				android:paddingTop="20dp"
        		android:layout_width="wrap_content"
				android:text="Super mega ponchik"
        		android:layout_height="wrap_content"
	        	android:layout_gravity="left|center"
		    	android:textColor="#000000"
        		android:textSize="22dp"/>


		    <TextView android:id="@+id/price"
				android:paddingTop="10dp"
			    android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
				android:text="16 rub."
			    android:textColor="#000000"
	    		android:layout_gravity="left|top"
        		android:textSize="22dp"/>
        		
		</LinearLayout>
    </LinearLayout>

    <FrameLayout android:layout_gravity="center|left"
		android:paddingTop="10dp"
		android:paddingBottom="5dp"
		android:paddingLeft="10dp"
		android:paddingRight="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    		
       	<TextView android:background="@drawable/blue_button_selector"
      	    android:id="@+id/blue_button"
			android:textColor="#1aa5ef"
			android:textSize="22dp"
       		android:text="@string/add_to_order"
			android:layout_gravity="center_vertical|center_horizontal"
			android:gravity="center_vertical|center_horizontal"
			android:layout_width="fill_parent"
    		android:layout_height="wrap_content"/>

       	
	    <LinearLayout android:layout_gravity="center|left"
	        android:id="@+id/green_button"
    	    android:background="@drawable/green_button_bg"
    	    android:orientation="horizontal"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content">
				
        	<TextView 
				android:textColor="#ffffff"
				android:textSize="22dp"
       			android:text="@string/in_order"
		    	android:layout_weight="1"
				android:layout_gravity="center_vertical|center_horizontal"
				android:gravity="center_vertical|center_horizontal"
				android:layout_width="fill_parent"
    			android:layout_height="wrap_content"/>
        		
			<Spinner android:id="@+id/spinner"
    			android:layout_width="wrap_content"
				android:paddingRight="20dp"
	   			android:layout_height="wrap_content" />
				        
        </LinearLayout>		
    </FrameLayout>
    		
    <TextView android:id="@+id/description"
		android:paddingLeft="10dp"
		android:paddingRight="10dp"
		android:textColor="#000000"
		android:textSize="17dp"
		android:text="Описания товаров нет среди данных тестового сервера."
		android:layout_gravity="top|left"
		android:layout_width="fill_parent"
    	android:layout_height="wrap_content"/>
    
</LinearLayout>
